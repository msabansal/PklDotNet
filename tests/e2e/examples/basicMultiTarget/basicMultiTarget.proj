<Project Sdk="Microsoft.Build.NoTargets">
  <PropertyGroup>
    <!-- Ensure the package supports multi-targeting -->
    <TargetFrameworks>net8.0;net472</TargetFrameworks>
    <LanguageTargets>$(MSBuildThisFileDirectory)\multitarget-mitigation.targets</LanguageTargets> <!-- https://github.com/microsoft/MSBuildSdks/issues/155 -->
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference the local MSBuild package -->
    <PackageReference Include="Apple.Pkl.MSBuild" Version="$(PackageVersion)" />
    <PackageReference Include="Apple.Pkl.Cli.$(RuntimeSuffix)" Version="$(PackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include all Pkl files recursively -->
    <Pkl Include="config.pkl" />
  </ItemGroup>

</Project>